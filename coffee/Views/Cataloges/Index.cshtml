@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/cataloges.css">
}

<div class="page-header">
    <div class="page-title">
        <h3>Danh Sách Danh Mục</h3>
    </div>
</div>

<div class="row layout-top-spacing" id="cancel-row">
    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
        <div class="widget-content widget-content-area br-6">
            <div class="table-responsive mb-4 mt-4">
                <table id="zero-config" class="table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th class="no-content"></th>
                            <th>Tên danh mục</th>
                            <th class="no-content width6Percent"></th>
                        </tr>
                    </thead>
                    <tbody id="tbList"></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script type="text/javascript" src="~/AdminLTE-3.0.4/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="~/js/lib.js"></script>
    <script type="text/javascript">
       var GetCataloge = "@Url.Action("GetAllCataloge", "CatalogesAPI")";
    </script>
    <script src="~/js/Cataloge.js"></script>
}


